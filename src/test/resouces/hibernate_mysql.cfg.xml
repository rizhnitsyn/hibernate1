<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!--"http://hibernate.org/dtd/hibernate-configuration.dtd">-->
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/mydb</property>
    <property name="connection.username">root</property>
    <property name="connection.password">1234</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <!--<property name="hbm2ddl.auto">create</property>-->

    <!--<mapping class="by.academy.Painting"/>-->
    <!--<mapping class="by.academy.Hero"/>-->
    <!--<mapping class="by.academy.Inventory"/>-->
    <!--<mapping class="by.academy.Items"/>-->
    <mapping class="by.academy.Enemy"/>
    <mapping class="by.academy.ArmoredEnemy"/>
    <mapping class="by.academy.InvisibleEnemy"/>
    <mapping class="by.academy.RangedEnemy"/>
  </session-factory>
</hibernate-configuration>